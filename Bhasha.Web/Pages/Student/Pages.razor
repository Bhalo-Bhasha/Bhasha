@page "/pages/{ProfileId:guid}/{ChapterId:guid}/{Index:int}"
@inherits UserPage

<AuthorizeView Roles="Student">
    <MudPaper Style="text-align: center">
        @if (_chapter != null)
        {
            <MudText>@_chapter.Name</MudText>
            <MudText Typo="Typo.body2">@_chapter.Description</MudText>
        }

        @if (_chapter != null && _page != null)
        {
            switch (_page.PageType)
            {
                case PageType.MultipleChoice:
                    <MultipleChoicePage Data="@_page" Submit="OnSubmit" />
                    break;

                default:
                    <MudText>@_page.PageType is not supported</MudText>
                    break;
            }
        }
    </MudPaper>
</AuthorizeView>