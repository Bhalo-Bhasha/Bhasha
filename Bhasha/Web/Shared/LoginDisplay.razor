<AuthorizeView>
    <Authorized>
        <MudIconButton Icon="@Icons.Material.Outlined.ManageAccounts" Link="Identity/Account/Manage">@context.User.Identity?.Name</MudIconButton>
    </Authorized>
    <NotAuthorized>
        <MudIconButton Icon="@Icons.Material.Outlined.AppRegistration" Disabled="true" Link="Identity/Account/Register">Register</MudIconButton>
        <MudIconButton Icon="@Icons.Material.Outlined.Login" Link="Identity/Account/Login">Log in</MudIconButton>
    </NotAuthorized>
</AuthorizeView>
