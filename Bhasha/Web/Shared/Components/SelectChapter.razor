@inherits ComponentBase

<MudPaper Style="text-align: center">
    <MudList Clickable="true">
        @foreach (var chapter in _chapters)
        {
            @if (chapter.Completed)
            {
                <MudListItem Avatar="@Icons.Material.Filled.Image" OnClick="() => OnSelection(chapter)">
                    @chapter.Name
                </MudListItem>
            }
            else
            {
                <MudListItem Avatar="@Icons.Material.Outlined.Image" OnClick="() => OnSelection(chapter)">
                    @chapter.Name
                </MudListItem>
            }
        }
    </MudList>
</MudPaper>