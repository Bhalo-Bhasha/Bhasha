@inherits ComponentBase

<MudCardContent Style="text-align: center">
    @if (DisplayLanguage)
    {
        <MudText>@Value.Language</MudText>
    }
    <MudTextField T="string" OnBlur="OnFocusLost" bind-Value="@_text" Label="Text (translation)"/>
    <MudTextField T="string" OnBlur="OnFocusLost" bind-Value="@_spoken" Label="Spoken (romanization) [optional]"/>
</MudCardContent>