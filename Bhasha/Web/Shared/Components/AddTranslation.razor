<MudDialog>
    <DialogContent>
        @if (_error != null)
        {
            <MudText Color="Color.Error">@_error.Message</MudText>
        }
        <MudTextField T="int" Disabled="DisableLevel" bind-Value="_level" Label="Level"/>
        <MudTextField T="string" bind-Value="_reference" Label="@Bhasha.Domain.Language.Reference"/>
        <MudTextField T="string" bind-Value="_target" Label="@Language"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="OnCancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Disabled="DisableSubmit" OnClick="OnSubmit">Submit</MudButton>
    </DialogActions>
</MudDialog>