@inherits ComponentBase

<MudPaper Width="100%">
    <MudContainer MaxWidth="MaxWidth.Small">
        <MudCard Outlined="true">
            <MudCardContent Style="text-align: center">
                <MudButton OnClick="OpenAddTranslation" Variant="Variant.Outlined" Color="Color.Primary">
                    Add Translation
                </MudButton>

                <MudTextField @bind-Value="@Name" Label="Name (Egnlish)" Variant="Variant.Outlined" />
                <MudTextField @bind-Value="@Description" Label="Description (Egnlish)" Variant="Variant.Outlined" Lines="3" />

                <MudDivider DividerType="DividerType.Middle" Class="my-3" />
                <MudNumericField Label="Required Level" @bind-Value="@RequiredLevel" Variant="Variant.Text" Min="1" Max="100" />

                <MudButton OnClick="OpenAddPage" Variant="Variant.Outlined" Color="Color.Primary">
                    Add Page
                </MudButton>

                <MudChipSet>
                    @foreach (var addedPage in Pages)
                    {
                        <MudChip Value="addedPage">@addedPage.Expression</MudChip>
                    }
                </MudChipSet>

                @if (!string.IsNullOrWhiteSpace(Error))
                {
                    <MudDivider DividerType="DividerType.Middle" Class="my-3" />
                    <MudText Color="Color.Error">@Error</MudText>
                }

                <MudDivider DividerType="DividerType.Middle" Class="my-3" />
                <MudButton Disabled="@DisableSave" Variant="Variant.Outlined" OnClick="Submit">Save</MudButton>
            </MudCardContent>
        </MudCard>
    </MudContainer>
</MudPaper>